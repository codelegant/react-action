{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "amd": true,
    "es6": true
  },
  "rules": {
    "semi": [2, "always"],
    "comma-dangle": [2, "never"],
    "no-cond-assign": [2],
    "no-constant-condition": [2],
    "no-control-regex": [2],
    "no-debugger": [2],
    "no-dupe-args": [2],
    "no-dupe-keys": [2],
    "no-duplicate-case": [2],
    "no-empty-character-class": [2],
    "no-empty": [2],
    "no-ex-assign": [2],
    "no-extra-boolean-cast": [2],
    "no-func-assign": [2],
    "no-inner-declarations": [2],
    "no-invalid-regexp": [2],
    "no-irregular-whitespace": [2],
    "no-negated-in-lhs": [2],
    "no-obj-calls": [2],
    "no-regex-spaces": [2],
    "no-sparse-arrays": [2],
    "no-unexpected-multiline": [2],
    "no-unreachable": [2],
    "use-isnan": [2],
    "no-octal": [2],
    "no-empty-pattern": [2],
    "no-multi-spaces": [2],
    "no-unused-labels": [1],
    "no-unused-vars": [0],
    "no-void": [2],
    "quotes": [
      2, "single", {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "strict": [2, "safe"],
    "dot-location": [2, "property"],
    "no-label-var": [2],
    "no-shadow-restricted-names": [2],
    "no-undef": [2],
    "init-declarations": [2, "always"],
    "no-catch-shadow": [2],
    "no-delete-var": [2],
    "no-console": [1],
    //ES6 语法
    "constructor-super": [1],
    "no-const-assign": [2],
    "no-dupe-class-members": [2],
    "no-new-symbol": [2],
    "no-this-before-super": [2],
    "no-class-assign": [2],
    "no-useless-escape": [2],
    "wrap-iife": [2,"inside"],
    "prefer-const": [1],
    "no-var": [2],
    "no-new-object": [2],
    "object-shorthand": [2],
    "quote-props": [2, "as-needed"],
    "no-array-constructor": [2],
    "array-callback-return": [1],
    "template-curly-spacing": [2],
    "prefer-rest-params": [1],
    "no-param-reassign": [2],
    "prefer-arrow-callback": [1],
    "arrow-body-style": [2, "as-needed"],
    "arrow-parens": [2, "as-needed"],
    "no-confusing-arrow": [
      2, {
        "allowParens": false
      }
    ],
    "no-useless-constructor": [2],
    "no-duplicate-imports": [2],
    //React 语法
    "react/prop-types": [1],
    "react/no-multi-comp": [
      2, {
        "ignoreStateless": true
      }
    ],
    "react/prefer-es6-class": [2, "always"],
    "react/jsx-pascal-case": [2],
    "jsx-quotes": [2, "prefer-double"],
    "react/jsx-curly-spacing": [
      0, "always", {
        "spacing": {
          "objectLiterals": "never"
        }
      }
    ],
    "react/jsx-boolean-value": [2],
    "react/wrap-multilines": [2],
    "react/self-closing-comp": [
      2, {
        "component": true,
        "html": false
      }
    ],
    "react/jsx-no-bind": [
      2, {
        "allowArrowFunctions": true
      }
    ],
    "react/no-is-mounted": [2]
  },
  "plugins": [
    "react"
  ],
  //开启建议设置
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}